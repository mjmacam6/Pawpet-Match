<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3ECB4"
    android:id="@+id/top_settings"
    android:orientation="vertical"
    tools:context=".drawer_settings">

    <RelativeLayout
        android:background="#CDC796"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back_button"
            android:padding="14dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="7dp"
            android:text="Settings"
            android:textSize="22dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>


    <LinearLayout
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/setting_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/accounts"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="13dp"
                android:background="@drawable/baseline_person_24"
                android:importantForAccessibility="no" />

            <TextView
                android:paddingStart="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Accounts"
                android:textStyle="bold"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:background="@drawable/modern_right" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/setting_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/your_listing"
            android:layout_marginTop="8dp"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="13dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/listing_logo"
                android:importantForAccessibility="no" />
            <TextView
                android:paddingStart="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Your Listing"
                android:textStyle="bold"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:background="@drawable/modern_right" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/setting_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/update"
            android:layout_marginTop="8dp"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/baseline_update_24"
                android:importantForAccessibility="no" />
            <TextView
                android:paddingStart="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="App Update"
                android:textStyle="bold"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:background="@drawable/modern_right" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/setting_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/report"
            android:layout_marginTop="8dp"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/baseline_report_problem_24"
                android:importantForAccessibility="no" />
            <TextView
                android:paddingStart="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Report Technical Problem"
                android:textStyle="bold"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:background="@drawable/modern_right" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/setting_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/privacy"
            android:layout_marginTop="8dp"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/baseline_privacy_tip_24"
                android:importantForAccessibility="no" />
            <TextView
                android:paddingStart="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Legal &amp; Policices"
                android:textStyle="bold"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:background="@drawable/modern_right" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
